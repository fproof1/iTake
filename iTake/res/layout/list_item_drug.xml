<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_activated" >

   
    <CheckBox
        android:id="@+id/drug_list_item_CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:enabled="false"
        android:focusable="false"
        android:gravity="center"
        android:padding="4dp" />

    <TextView
        android:id="@+id/drug_list_item_titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/drug_list_item_CheckBox"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="Drug title"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/drug_list_item_dateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/drug_list_item_titleTextView"
        android:layout_toLeftOf="@id/drug_list_item_CheckBox"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp"
        android:text="Medication" />

  
</RelativeLayout>